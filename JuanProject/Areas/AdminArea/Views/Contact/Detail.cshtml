@model ContactDretailVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 style="text-align:center" class="card-title">Category List</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        PhoneNumber
                                    </th>
                                    <th>
                                        Subject
                                    </th>

                                </tr>

                            </thead>
                            <tbody>
                                <tr class="table-info">
                                    <td>
                                        @Model.Name
                                    </td>
                                    <td>
                                        @Model.Email
                                    </td>
                                    <td>
                                        @Model.PhoneNumber
                                    </td>
                                    <td>
                                        @Model.Subject
                                    </td>

                                </tr>
                                <tr>
                                    <th>
                                        Message
                                    </th>
                                </tr>
                                <tr>
                                    <td style="white-space:normal">
                                        @Model.Message
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <a asp-action="Index" class="btn btn-outline-dark my-2">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

