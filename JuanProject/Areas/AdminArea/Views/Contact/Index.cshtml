@model List<ContactListVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 style="text-align:center" class="card-title">Category List</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        PhoneNumber
                                    </th>
                                    <th>
                                        Subject
                                    </th>
                                    <th style="text-align:center">
                                        Setting
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contact in Model)
                                {
                                    <tr class="table-info">
                                        <td>
                                            @contact.Name
                                        </td>
                                        <td>
                                            @contact.Email
                                        </td>
                                        <td>
                                            @contact.PhoneNumber
                                        </td>
                                        <td>
                                            @contact.Subject
                                        </td>
                                        <td style="text-align:center">
                                            <a asp-action="Detail" asp-route-id="@contact.Id" class="btn btn-primary">Detail</a>
                                            <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

