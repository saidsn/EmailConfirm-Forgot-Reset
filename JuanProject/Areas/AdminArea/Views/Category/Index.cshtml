@model List<CategoryListVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 style="text-align:center" class="card-title">Category List</h4>
                    <a asp-action="Create" class="btn btn-success">Create</a>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>
                                        Name
                                    </th>
                                    <th style="text-align:center">
                                        Setting
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr class="table-info">
                                        <td>
                                            @Html.Raw(category.Name)
                                        </td>
                                        <td style="text-align:center">
                                            <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-primary">Detail</a>
                                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

