@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="display:flex;justify-content:center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card my-5">
                <div class="card-body">
                    <h4 style="text-align:center" class="card-title">ForgotPassword</h4>
                    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input class="form-control" asp-for="Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

